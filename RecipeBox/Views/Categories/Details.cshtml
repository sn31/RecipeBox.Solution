@{
Layout = "_Layout";
}

<h1 class="mt-3">@Model.Name</h1>
  <button onclick="window.location.href='/'" class="btn btn-secondary my-2">Go Home</button>
  <button onclick="window.location.href='/categories'" class="btn btn-secondary ml-2 my-2">Go back to previous page</button>
  <hr>
  <div class="row">
      <div class="col">
          <h6>Name</h6>
      </div>
      <div class="col">
          <h6>Update</h6>
      </div>
      <div class="col">
          <h6>Delete</h6>
      </div>
  </div>
  @foreach(var recipe in @Model.GetRecipes())
  {
      <div class="row">
          <div class="col">
              <p><a href="/recipes/@recipe.Id">@recipe.Name</a></p>
          </div>
          <div class="col">
              <form class="form-group" action='/recipes/update/@recipe.Id' method='get'>
                  <button class="btn btn-info" type="submit">Update Recipe</button>
              </form>
          </div>
          <div class="col">
              <form class="form-group" action='/recipes/delete/@recipe.Id' method='post'>
                  <button class="btn btn-danger" type="submit">Delete Recipe</button>
              </form>
          </div>
      </div>
  }
